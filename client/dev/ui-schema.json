{
  "operations": {
    "createArticle": {
      "form": {
        "title": "Create Editorial Article",
        "subtitle": "Preview generated by formgen sandbox",
        "layout": {
          "gridColumns": 12,
          "gutter": "md"
        },
        "actions": [
          {
            "kind": "secondary",
            "label": "Cancel",
            "href": "/articles"
          },
          {
            "kind": "primary",
            "label": "Publish Article",
            "type": "submit"
          }
        ],
        "metadata": {
          "scenario": "sandbox"
        },
        "uiHints": {
          "theme": "basecoat"
        }
      },
      "sections": [
        {
          "id": "overview",
          "title": "Overview",
          "description": "Core identity and workflow details.",
          "order": 0,
          "fieldset": true
        },
        {
          "id": "content",
          "title": "Content",
          "description": "Editorial copy and metadata.",
          "order": 1,
          "fieldset": true
        },
        {
          "id": "relationships",
          "title": "Relationships",
          "description": "Remote resources hydrated by the runtime resolver.",
          "order": 2
        },
        {
          "id": "collaboration",
          "title": "Collaboration",
          "description": "Contributors and related assets.",
          "order": 3
        }
      ],
      "fields": {
        "article.title": {
          "section": "overview",
          "order": 0,
          "grid": { "span": 8 },
          "label": "Title",
          "placeholder": "Garden maintenance tips",
          "required": true,
          "component": "input"
        },
        "article.slug": {
          "section": "overview",
          "order": 1,
          "grid": { "span": 4 },
          "label": "Slug",
          "placeholder": "garden-maintenance-tips",
          "component": "input",
          "helpText": "Auto generated from the title but editable."
        },
        "article.status": {
          "section": "overview",
          "order": 2,
          "grid": { "span": 4 },
          "label": "Status",
          "component": "select",
          "placeholder": "Select status"
        },
        "article.featured": {
          "section": "overview",
          "order": 3,
          "grid": { "span": 4 },
          "label": "Featured",
          "component": "checkbox",
          "helpText": "Pins the story to the homepage hero."
        },
        "article.read_time_minutes": {
          "section": "overview",
          "order": 4,
          "grid": { "span": 4 },
          "label": "Read time (min)",
          "component": "input",
          "placeholder": "5"
        },
        "article.tenant_id": {
          "section": "overview",
          "order": 5,
          "grid": { "span": 6 },
          "label": "Tenant",
          "component": "select",
          "placeholder": "Select tenant",
          "helpText": "Changing tenants refreshes author, category, tags, and related resources.",
          "refresh": {
            "targets": [
              "article.author_id",
              "article.category_id",
              "article.tags",
              "article.related_article_ids",
              "article.contributors[].person_id"
            ]
          }
        },
        "article.summary": {
          "section": "content",
          "order": 6,
          "grid": { "span": 12 },
          "label": "Summary",
          "component": "textarea",
          "rows": 3,
          "placeholder": "Short teaser shown in listings"
        },
        "article.body": {
          "section": "content",
          "order": 7,
          "grid": { "span": 12 },
          "label": "Body",
          "component": "textarea",
          "rows": 8,
          "placeholder": "Write the full article in Markdown"
        },
        "article.keywords": {
          "section": "content",
          "order": 8,
          "grid": { "span": 12 },
          "label": "Keywords",
          "component": "textarea",
          "rows": 2,
          "helpText": "Comma separated keywords used for SEO."
        },
        "article.published_at": {
          "section": "content",
          "order": 9,
          "grid": { "span": 4 },
          "label": "Publish at",
          "component": "datetime"
        },
        "article.workflow_notes": {
          "section": "content",
          "order": 10,
          "grid": { "span": 12 },
          "label": "Workflow notes",
          "component": "textarea",
          "rows": 3,
          "helpText": "Internal communication for reviewers."
        },
        "article.author_id": {
          "section": "relationships",
          "order": 11,
          "grid": { "span": 6 },
          "label": "Author",
          "component": "relationship",
          "renderer": "typeahead",
          "placeholder": "Search authors",
          "required": true,
          "refresh": {
            "mode": "auto",
            "on": ["article.tenant_id"]
          }
        },
        "article.manager_id": {
          "section": "relationships",
          "order": 12,
          "grid": { "span": 6 },
          "label": "Manager",
          "component": "relationship",
          "renderer": "typeahead",
          "placeholder": "Search managers",
          "helpText": "Filters by the selected author.",
          "refresh": {
            "mode": "manual",
            "on": ["article.author_id"],
            "triggers": ["manager-refresh"]
          }
        },
        "article.category_id": {
          "section": "relationships",
          "order": 13,
          "grid": { "span": 6 },
          "label": "Category",
          "component": "relationship",
          "renderer": "typeahead",
          "placeholder": "Search categories",
          "helpText": "Scoped by tenant."
        },
        "article.tags": {
          "section": "relationships",
          "order": 14,
          "grid": { "span": 6 },
          "label": "Tags",
          "component": "relationship",
          "renderer": "chips",
          "placeholder": "Search tags",
          "helpText": "Supports free-text search with debounce.",
          "refresh": {
            "mode": "auto",
            "on": ["article.category_id", "article.tenant_id"]
          }
        },
        "article.related_article_ids": {
          "section": "relationships",
          "order": 15,
          "grid": { "span": 12 },
          "label": "Related articles",
          "component": "relationship",
          "renderer": "chips",
          "placeholder": "Search articles"
        },
        "article.contributors": {
          "section": "collaboration",
          "order": 16,
          "grid": { "span": 12 },
          "label": "Contributors",
          "component": "array",
          "itemLabel": "Contributor",
          "helpText": "Demonstrates nested arrays with relationship fields.",
          "nested": [
            "article.contributors[].person_id",
            "article.contributors[].role",
            "article.contributors[].notes"
          ]
        },
        "article.contributors[].person_id": {
          "section": "collaboration",
          "order": 17,
          "grid": { "span": 6 },
          "label": "Person",
          "component": "relationship",
          "renderer": "typeahead",
          "placeholder": "Search contributors",
          "refresh": {
            "mode": "auto",
            "on": ["article.tenant_id", "article.status"]
          }
        },
        "article.contributors[].role": {
          "section": "collaboration",
          "order": 18,
          "grid": { "span": 3 },
          "label": "Role",
          "component": "select"
        },
        "article.contributors[].notes": {
          "section": "collaboration",
          "order": 19,
          "grid": { "span": 3 },
          "label": "Notes",
          "component": "textarea",
          "rows": 2
        }
      }
    }
  }
}
