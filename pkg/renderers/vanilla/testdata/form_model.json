    "relations": "{\"includes\":[\"author\",\"author.manager\",\"category\",\"contributors\",\"contributors.person\",\"related_articles\",\"tags\"],\"relations\":[{\"filters\":[{\"field\":\"full_name\",\"operator\":\"ilike\"}],\"name\":\"author\"},{\"filters\":[{\"field\":\"label\",\"operator\":\"ilike\"}],\"name\":\"tags\"},{\"filters\":[{\"field\":\"role\",\"operator\":\"eq\"},{\"field\":\"person.full_name\",\"operator\":\"ilike\"}],\"name\":\"contributors\"},{\"filters\":[{\"field\":\"title\",\"operator\":\"ilike\"},{\"field\":\"category_id\",\"operator\":\"eq\"}],\"name\":\"related_articles\"}],\"tree\":{\"children\":{\"author\":{\"children\":{\"manager\":{\"name\":\"manager\"}},\"name\":\"author\"},\"category\":{\"name\":\"category\"},\"contributors\":{\"children\":{\"person\":{\"name\":\"person\"}},\"name\":\"contributors\"},\"related_articles\":{\"name\":\"related_articles\"},\"tags\":{\"name\":\"tags\"}},\"name\":\"article\"}}",
