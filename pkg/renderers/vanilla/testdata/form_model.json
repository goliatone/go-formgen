        "behavior.config": "{\"source\":\"title\"}",
        "behavior.names": "autoSlug",
        "component.config": "{\"behaviors\":{\"autoSlug\":{\"source\":\"title\"}}}",
        "layout.order": "1",
        "layout.section": "overview"
      },
      "uiHints": {
        "helpText": "Auto generated from the title but editable.",
