        "relationship.endpoint.fieldLabel": "Author Id",
        "relationship.endpoint.labelField": "full_name",
        "relationship.endpoint.method": "GET",
        "relationship.endpoint.mode": "search",
        "relationship.endpoint.params.format": "options",
        "relationship.endpoint.params.include": "profile",
        "relationship.endpoint.params.limit": "50",
        "relationship.endpoint.params.order": "full_name asc",
