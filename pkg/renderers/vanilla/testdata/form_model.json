      "metadata": {
        "layout.order": "15",
        "layout.section": "relationships",
        "relationship.endpoint.dynamicParams.category_id": "{{field:category_id}}",
        "relationship.endpoint.dynamicParams.tenant_id": "{{field:tenant_id}}",
        "relationship.endpoint.labelField": "title",
        "relationship.endpoint.method": "GET",
        "relationship.endpoint.mode": "search",
        "relationship.endpoint.params.format": "options",
        "relationship.endpoint.params.limit": "25",
        "relationship.endpoint.params.order": "published_at desc",
